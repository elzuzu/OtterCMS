{
  "name": "indi-suivi-nodejs",
  "version": "2.0.0",
  "description": "Application Electron Node.js full modulaire, champs dynamiques, audit trail complet.",
  "main": ".vite/build/main.js",
  "scripts": {
    "start": "electron-forge start",
    "dev": "electron-forge start",
