    "better-sqlite3"
  ],
  "author": "Votre Nom ou Entreprise",
  "license": "MIT",
  "engines": {
    "node": ">=20.19.2"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^11.10.0",
    "chart.js": "^4.4.3",
    "electron-squirrel-startup": "^1.0.0",
    "electron-updater": "^6.1.7",
    "framer-motion": "^10.16.4",
    "lucide-react": "^0.363.0",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.3",
    "xlsx": "^0.18.5",
    "zustand": "^4.5.2"
