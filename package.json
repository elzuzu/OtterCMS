{
  "name": "indi-suivi-nodejs",
  "version": "2.0.0",
  "description": "Application Electron Node.js full modulaire, champs dynamiques, audit trail complet.",
  "main": ".vite/build/main.js",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently -k \"npm run dev:vite\" \"npm run dev:main\" \"npm run dev:preload\" \"wait-on http://localhost:5173 && electron .\"",
    "dev:vite": "vite --config vite.config.js --port 5173",
    "dev:main": "vite build --config vite.main.config.ts --watch",
    "dev:preload": "vite build --config vite.preload.config.ts --watch",
    "build": "npm run build:main && npm run build:preload && npm run build:renderer",
    "build:main": "vite build --config vite.main.config.ts",
    "build:preload": "vite build --config vite.preload.config.ts",
    "build:renderer": "vite build --config vite.config.js",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:forge": "npm run build && electron-forge make",
    "dist:packager": "npm run build && electron-packager . \"Indi-Suivi\" --platform=win32 --arch=x64 --out=release-builds --overwrite",
    "install-app": "node ./scripts/install.js",
    "clean": "rimraf out dist .vite release-builds build",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "postinstall": "electron-builder install-app-deps && npm run rebuild"
  },
  "keywords": [
    "electron",
    "modulaire",
    "champs dynamiques",
    "audit",
    "suivi",
    "sqlite",
    "react",
    "better-sqlite3"
  ],
  "author": "Votre Nom ou Entreprise",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^11.11.0",
    "chart.js": "^4.4.3",
    "electron-squirrel-startup": "^1.0.0",
    "electron-updater": "^6.1.8",
    "framer-motion": "^10.17.0",
    "lucide-react": "^0.367.0",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.3.1",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.4",
    "xlsx": "^0.19.0",
    "zustand": "^4.5.3"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.7.3",
    "@vitejs/plugin-react": "^4.2.2",
    "concurrently": "^8.2.2",
    "electron": "^30.0.0",
    "electron-builder": "^24.15.0",
    "rimraf": "^5.0.6",
    "typescript": "^5.4.0",
    "vite": "^5.2.0",
    "wait-on": "^7.3.0",
    "@electron/packager": "^17.1.3"
  },
  "build": {
    "appId": "com.votreentreprise.indisuivi",
    "productName": "Indi-Suivi",
    "asar": false,
    "compression": "normal",
    "files": [
      "package.json",
      ".vite/build/main.js",
      ".vite/build/preload.js",
      "dist/**/*",
      ".vite/build/utils/**/*",
      "!src/renderer/**/*",
      "!src/*.ts",
      "!**/*.map"
    ],
    "directories": {
      "buildResources": "src/assets",
      "output": "release-builds"
    },
    "extraResources": [
      {
        "from": "src/assets",
        "to": "assets"
      }
    ],
    "extraFiles": [
      {
        "from": "config",
        "to": "config"
      },
      {
        "from": "db",
        "to": "db"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "src/assets/app-icon.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "src/assets/app-icon.ico",
      "uninstallerIcon": "src/assets/app-icon.ico",
      "installerHeaderIcon": "src/assets/app-icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Indi-Suivi",
      "include": "installer.nsh"
    },
    "portable": {
      "artifactName": "Indi-Suivi-Portable.exe"
    }
  }
}
