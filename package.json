{
  "name": "indi-suivi-nodejs",
  "version": "2.0.0",
  "description": "Application Electron Node.js full modulaire, champs dynamiques, audit trail complet.",
  "main": ".vite/build/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "vite --config vite.config.js --port 5173 & npm run dev:main & npm run dev:preload & electron . --wait-for-vite",
    "dev:main": "vite build --config vite.main.config.ts --watch",
    "dev:preload": "vite build --config vite.preload.config.ts --watch",
    "build:vite": "vite build --config vite.main.config.ts && vite build --config vite.preload.config.ts && vite build --config vite.config.js",
    "pack": "npm run build:vite && electron-builder --dir",
    "dist": "npm run build:vite && electron-builder",
    "install-app": "node ./scripts/install.js",
    "clean": "rimraf out dist .vite release-builds",
    "rebuild": "electron-rebuild -f -w better-sqlite3"
  },
  "keywords": [
    "electron",
    "modulaire",
    "champs dynamiques",
    "audit",
    "suivi",
    "sqlite",
    "react",
    "better-sqlite3"
  ],
  "author": "Votre Nom ou Entreprise",
  "license": "MIT",
  "engines": {
    "node": ">=20.19.2"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^11.10.0",
    "chart.js": "^4.4.3",
    "electron-squirrel-startup": "^1.0.0",
    "electron-updater": "^6.1.7",
    "framer-motion": "^10.16.4",
    "lucide-react": "^0.363.0",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.3",
    "xlsx": "^0.18.5",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "electron-builder": "^24.13.1",
    "@electron/rebuild": "^3.7.2",
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^29.1.5",
    "rimraf": "^5.0.5",
    "vite": "^6.3.5"
  },
  "build": {
    "appId": "com.votreentreprise.indisuivi",
    "productName": "Indi-Suivi",
    "asar": true,
    "files": [
      "package.json",
      ".vite/build/main.js",
      ".vite/build/preload.js",
      "dist/**/*"
    ],
    "directories": {
      "buildResources": "src/assets",
      "output": "release-builds"
    },
    "win": {
      "target": "squirrel",
      "icon": "src/assets/app-icon.ico"
    },
    "squirrelWindows": {
      "iconUrl": "src/assets/app-icon.ico"
    }
  }
}
