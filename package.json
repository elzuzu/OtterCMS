{
  "name": "indi-suivi-nodejs",
  "version": "2.0.0",
  "description": "Application Electron Node.js full modulaire, champs dynamiques, audit trail complet.",
  "main": ".vite/build/main.js",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently -k \"npm run dev:vite\" \"npm run dev:main\" \"npm run dev:preload\" \"wait-on http://localhost:5173 && electron .\"",
    "dev:vite": "vite --config vite.config.js --port 5173",
    "dev:main": "vite build --config vite.main.config.ts --watch",
    "dev:preload": "vite build --config vite.preload.config.ts --watch",
    "build": "npm run build:main && npm run build:preload && npm run build:renderer",
    "build:main": "vite build --config vite.main.config.ts",
    "build:preload": "vite build --config vite.preload.config.ts",
    "build:renderer": "vite build --config vite.config.js",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:forge": "npm run build && electron-forge make",
    "dist:packager": "npm run build && electron-packager . \"Indi-Suivi\" --platform=win32 --arch=x64 --out=release-builds --overwrite",
    "install-app": "node ./scripts/install.js",
    "clean": "rimraf out dist .vite release-builds build",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "cleanup-deps": "node scripts/cleanup-dependencies.js",
    "postinstall": "electron-builder install-app-deps && npm run rebuild && npm run cleanup-deps",
    "dist:validate": "npm run dist && node scripts/validate-build.js",
    "analyze": "npm run build && npx webpack-bundle-analyzer dist/static/js/*.js"
  },
  "keywords": [
    "electron",
    "modulaire",
    "champs dynamiques",
    "audit",
    "suivi",
    "sqlite",
    "react",
    "better-sqlite3"
  ],
  "author": "AWY",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "better-sqlite3": "^11.10.0",
    "chart.js": "^4.4.9",
    "electron-squirrel-startup": "^1.0.1",
    "electron-updater": "^6.6.2",
    "framer-motion": "^12.11.0",
    "react": "^19.1.0",
    "react-chartjs-2": "^5.3.0",
    "react-router-dom": "^7.6.0",
    "xlsx": "^0.18.5",
    "zustand": "^5.0.4",
    "@mui/material": "^5.15.14",
    "@emotion/react": "^11.11.3",
    "@emotion/styled": "^11.11.3",
    "react-perfect-scrollbar": "^1.5.8",
    "@tabler/icons-react": "^3.3.0"
  },
  "devDependencies": {
    "@electron/packager": "^18.3.6",
    "@electron/rebuild": "^3.7.2",
    "@vitejs/plugin-react": "^4.4.1",
    "concurrently": "^9.1.2",
    "electron": "^36.2.0",
    "electron-builder": "^26.0.12",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.ege.indisuivi",
    "productName": "Indi-Suivi",
    "asar": true,
    "compression": "maximum",
    "files": [
      "package.json",
      ".vite/build/main.js",
      ".vite/build/preload.js",
      "dist/**/*",
      ".vite/build/utils/**/*",
      "node_modules/better-sqlite3/**/*",
      "node_modules/bcryptjs/**/*",
      "node_modules/xlsx/**/*",
      "!node_modules/**/*.{md,txt,LICENSE,CHANGELOG,README}",
      "!node_modules/**/test/**",
      "!node_modules/**/tests/**",
      "!node_modules/**/*.d.ts",
      "!node_modules/**/docs/**",
      "!node_modules/better-sqlite3/build/Debug/**",
      "!node_modules/better-sqlite3/deps/**",
      "!node_modules/better-sqlite3/src/**",
      "!**/*.map"
    ],
    "asarUnpack": [
      "node_modules/better-sqlite3/build/Release/*.node"
    ],
    "directories": {
      "buildResources": "src/assets",
      "output": "release-builds"
    },
    "extraResources": [
      {
        "from": "src/assets",
        "to": "assets"
      }
    ],
    "extraFiles": [
      {
        "from": "config",
        "to": "config"
      },
      {
        "from": "db",
        "to": "db",
        "filter": ["**/*.sqlite"]
      }
    ],
      "win": {
        "target": [
          {
            "target": "nsis",
            "arch": [
              "x64"
            ]
          },
          {
            "target": "portable",
            "arch": [
              "x64"
            ]
          }
        ],
        "icon": "src/assets/app-icon.ico",
      "requestedExecutionLevel": "asInvoker",
        "signAndEditExecutable": false,
        "files": [
          "!node_modules/better-sqlite3/build/Release/better_sqlite3.node",
          "node_modules/better-sqlite3/build/Release/better_sqlite3_win32_x64.node"
        ]
      },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "src/assets/app-icon.ico",
      "uninstallerIcon": "src/assets/app-icon.ico",
      "installerHeaderIcon": "src/assets/app-icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Indi-Suivi",
      "include": "installer.nsh"
    },
    "portable": {
      "artifactName": "Indi-Suivi-Portable.exe"
    }
  }
}
