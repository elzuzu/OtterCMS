{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/dev/tooling/cli/schema.json",
  "identifier": "com.ege.ottercms",
  "productName": "OtterCMS",
  "version": "2.0.0",
  "build": {
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "plugins": {
    "sql": {
      "preload": ["sqlite:ottercms.db"]
    }
  },
  "app": {
    "windows": [
      {
        "title": "OtterCMS",
        "width": 1200,
        "height": 800
      }
    ],
    "security": {
      "capabilities": [
        {
          "identifier": "main-capability",
          "windows": ["main"],
          "permissions": [
            "core:default",
            "sql:default",
            "sql:allow-execute",
            "sql:allow-select"
          ]
        }
      ]
    }
  }
}
